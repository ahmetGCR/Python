   "source": [
    "# Girilen metnin harflerini yan yana yazdıran Python Örneği\n",
    "\n",
    "metin = input(\"metin giriniz : \")\n",
    "\n",
    "for karakter in metin:\n",
    "    print(karakter, end=\" , \")\n",
    "\n",
    "# while ile\n",
    "\n",
    "sayaç = 0\n",
    "\n",
    "while sayaç < len(metin):\n",
    "    karakter = metin[sayaç]\n",
    "    sayaç += 1\n",
    "    print(karakter, end= \" , \")  "
   ]
  }
