    "# Cümlenin Uzunluğunu Bulan Program\n",
    "\n",
    "cümle = input(\"cümle giriniz : \")\n",
    "\n",
    "uzunluk = len(cümle)\n",
    "print(\"cümlenin uzunluğu : \", uzunluk)\n",
    "\n",
    "# while ile\n",
    "\n",
    "sayaç = 0\n",
    "while cümle[sayaç:]:\n",
    "    sayaç+=1\n",
    "print(\"cümlenin uzunluğu : \",sayaç)"
   ]
  }
